extends layout.pug

block head
  meta(charset='urf-8')
  title FRIB traveler - #{type} - #{id} - share
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet', href=basePath + '/bootstrap/css/bootstrap.css')
  link(rel='stylesheet', href=basePath + '/bootstrap/css/bootstrap-responsive.css')
  link(rel='stylesheet', href=basePath + '/datatables/css/dataTables.bootstrap.css')
  link(rel='stylesheet', href=basePath + '/font-awesome-4.3.0/css/font-awesome.css')
  link(rel='stylesheet', href=basePath + '/stylesheets/style.css')

block content
  script(type='text/javascript').
    var access = !{access};
  .container(style='margin-top: 10px')
    #message
    .modal.hide.fade#modal(tabindex='-1', role='dialog', data-backdrop='static', aria-labelledby='modalLabel', aria-hidden='true')
      .modal-header
        h3#modalLabel
      .modal-body
      .modal-footer
    h3 Public access for #{type}
      = ' '
      span.text-info #{title}
    form.form-inline(name='public')
      select(name='public')
        option(value='-1') no access
        option(value='0') read
        option(value='1') write
      = ' '
      button.btn.btn-primary#update(type='submit', disabled) Update
    h3 Shared user list for #{type}
      = ' '
      span.text-info #{title}
    //- .well
    form.form-inline(name='user')
      input.input#username(type='text', placeholder='Last, First', name='name')
      != ' '
      label.checkbox
        input#access(type='checkbox', name='access', value='write')
        | Write
      != ' '
      button.btn.btn-primary#add(type='submit', disabled) Add to share
    .btn-toolbar
      .btn-group
        button.btn.btn-info#share-modify(type='button')
          i.fa.fa-wrench.fa-lg
          | &nbsp;Modify
      .btn-group
        button.btn.btn-warning#share-remove(type='button')
          i.fa.fa-trash-o.fa-lg
          | &nbsp;Remove
    table.table.table-bordered.table-hover#share-table
    h3 Shared group list for #{type}
      = ' '
      span.text-info #{title}
    //- .well
    form.form-inline(name='group')
      input.input.input-xlarge#groupid(type='text', placeholder='LAB.FRIB.DIV.Department.Group', name='group')
      != ' '
      label.checkbox
        input#groupaccess(type='checkbox', name='access', value='write')
        | Write
      != ' '
      button.btn.btn-primary#addgroup(type='submit', disabled) Add to share
    .btn-toolbar
      .btn-group
        button.btn.btn-info#groupshare-modify(type='button')
          i.fa.fa-wrench.fa-lg
          | &nbsp;Modify
      .btn-group
        button.btn.btn-warning#groupshare-remove(type='button')
          i.fa.fa-trash-o.fa-lg
          | &nbsp;Remove

    table.table.table-bordered.table-hover#groupshare-table

block js
  script(type='text/javascript', src=basePath + '/jquery/jquery-1.9.1.js')
  script(type='text/javascript', src=basePath + '/datatables/js/jquery.dataTables.js')
  script(type='text/javascript', src=basePath + '/bootstrap/js/bootstrap.js')
  script(type='text/javascript', src=basePath + '/datatables/js/ZeroClipboard.js')
  script(type='text/javascript', src=basePath + '/datatables/js/TableTools.js')
  script(type='text/javascript', src=basePath + '/datatables/js/dataTables.bootstrap.js')
  script(type='text/javascript', src=basePath + '/dependencies/typeahead.bundle.js')
  script(type='text/javascript', src=basePath + '/javascripts/table.js')
  script(type='text/javascript', src=basePath + '/javascripts/util.js')
  script(type='text/javascript', src=basePath + '/javascripts/ajax-helper.js')
  script(type='text/javascript', src=basePath + '/javascripts/global.js')
  script(type='text/javascript', src=basePath + '/javascripts/usernames.js')
  script(type='text/javascript', src=basePath + '/javascripts/groupids.js')
  script(type='text/javascript', src=basePath + '/javascripts/share.js')
