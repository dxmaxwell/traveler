extends layout.pug

block head
  title FRIB Traveler - documentation
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet', href=basePath + '/bootstrap/css/bootstrap.css')
  link(rel='stylesheet', href=basePath + '/bootstrap/css/bootstrap-responsive.css')
  link(rel='stylesheet', href=basePath + '/font-awesome-4.3.0/css/font-awesome.css')
  link(rel='stylesheet', href=basePath + '/stylesheets/style.css')
  link(rel='stylesheet', href=basePath + '/stylesheets/doc.css')
block content
  //- header
  .container
    .hero-unit
      include:marked ./docs/hero.md

  .container
    .row
      .span9
        section#how-to-use
          h2 How to use this document
          p There is an Audience statement on the top of each section. If you are not the target audience, then you can skip the section.
        section#basics
          include ./docs/basics.pug
        section#travelers
          include ./docs/travelers.pug
        section#forms
          include ./docs/forms.pug
        section#binders
          include ./docs/binders.pug
        section#api
          include ./docs/api.pug
        section#faq
          include ./docs/faq.pug
        section#contact
          include:marked ./docs/contact.md

      .span3.sidebar
        ul.nav.nav-list.nav-stacked.bs-docs-sidenav#affixlist
          li
            a(href='#basics') Basics
          li
            a(href='#travelers') Travelers
          li
            a(href='#forms') Forms
          li
            a(href='#binders') Binders
          li
            a(href='#api') API
          li
            a(href='#faq') FAQ
          li
            a(href='#contact') Contact


block js
  script(type='text/javascript', src=basePath + '/jquery/jquery-1.9.1.js')
  script(type='text/javascript', src=basePath + '/bootstrap/js/bootstrap.js')
  script(type='text/javascript', src=basePath + '/javascripts/docs.js')
